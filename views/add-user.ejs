<div class="row">
    <div class="col-sm">
    </div>
    <div class="col">
        <% if(Object.keys(errors).length) { %>
            <div class="my-4 alert alert-danger" role="alert">Не удалось сохранить пользователя!</div>
        <% } %>
        <form action="" method="post">
            <div class="form-group">
                <label for="surname">Фамилия</label>
                <input type="text" class="form-control <%= errors.surname ? 'is-invalid' : ''%>" id="surname" name="surname">
                <div class="invalid-feedback"><%= errors.surname %></div>
            </div>
            <div class="form-group">
                <label for="name">Имя</label>
                <input type="text" class="form-control <%= errors.name ? 'is-invalid' : ''%>" id="name" name="name">
                <div class="invalid-feedback"><%= errors.name %></div>
            </div>
            <div class="form-group">
                <label for="patronimic">Отчество</label>
                <input type="text" class="form-control <%= errors.patronimic ? 'is-invalid' : ''%>" id="patronimic" name="patronimic">
                <div class="invalid-feedback"><%= errors.patronimic %></div>
            </div>
            <div class="form-group">
                <label for="gender">Пол</label>
                <br/>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="gender-male" value="male">
                    <label class="form-check-label" for="gender-male">Мужской</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="gender-female" value="female">
                    <label class="form-check-label" for="gender-female">Женский</label>
                </div>
                <input type="hidden" class="form-control <%= errors.gender ? 'is-invalid' : ''%>" >
                <div class="invalid-feedback"><%= errors.gender %></div>
            </div>
            <div class="form-group">
                <label for="email">Электроная почта</label>
                <input type="email" class="form-control <%= errors.email ? 'is-invalid' : ''%>" id="email" name="email">
                <div class="invalid-feedback"><%= errors.email %></div>
            </div>
            <div class="form-group">
                <label for="password">Пароль</label>
                <input type="password" class="form-control <%= errors.password ? 'is-invalid' : ''%>" id="password" name="password">
                <div class="invalid-feedback"><%= errors.password %></div>
            </div>
            <div class="form-group">
                <label for="password2">Пароль еще раз</label>
                <input type="password" class="form-control <%= errors.password2 ? 'is-invalid' : ''%>" id="password2" name="password2">
                <div class="invalid-feedback"><%= errors.password2 %></div>
            </div>
            <div class="text-center my-4">
                <button type="submit" class="btn btn-success">Добавить</button>
            </div>
        </form>

    </div>
    <div class="col-sm">
    </div>
</div>
